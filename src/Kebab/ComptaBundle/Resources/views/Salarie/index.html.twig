{% extends '::base.html.twig' %}

{% block body -%}

    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('salarie_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{% if entity.type == 'PRO' %}Contrat Pro{% elseif entity.type == 'NOR'  %}Contrat Normal{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('salarie_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('salarie_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('salarie_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
