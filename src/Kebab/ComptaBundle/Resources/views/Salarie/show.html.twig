{% extends '::base.html.twig' %}
{% block title %}{{ entity.nom|upper }} {{ entity.prenom|capitalize }}{% endblock %}
{% block sub_title -%}Fiche Salarié {% endblock %}
{% block new_breadcrumb %}
<li>
    <i class="fa fa-angle-right"></i>
        <a href="{{ path('salarie') }}">Salariés</a>
</li>
<li>
    <i class="fa fa-angle-right"></i>
    <a href="{{ path('salarie_show', { 'id': entity.id }) }}">{{ entity.nom|upper }} {{ entity.prenom|capitalize }}</a>
</li>
{% endblock %} 
{% block body -%}
    <p><a class="btn btn-lg btn-primary" href="{{ path('salaire_new') }}"><i class="fa fa-plus-circle"></i> Ajouter un salaire</a></p>
    <p><a class="btn btn-lg btn-primary" href="{{ path('salarie_new') }}"><i class="fa fa-plus-circle"></i> Ajouter un nouveau salarié</a></p>
    <table class="table table-hover table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom|upper }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ entity.prenom|capitalize }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{% if entity.type == 'PRO' %}Contrat Pro{% elseif entity.type == 'NOR'  %}Contrat Normal{% endif %}</td>
            </tr>            
            
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('salarie') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('salarie_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
